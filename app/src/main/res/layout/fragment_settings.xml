<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.susankya.rnk.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:orientation="vertical"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <com.susankya.rnk.TextViewPlus
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Settings title"
                android:textColor="#120"
                android:textSize="20dp" />

            <Switch
                android:id="@+id/switch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/custom_selector"
                android:switchTextAppearance="@style/SwitchTextAppearance" />

            <com.susankya.rnk.TextViewPlus
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/title"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_toLeftOf="@id/switch1"
                android:text="description"
                android:textSize="13dp" />
        </RelativeLayout>

        <com.susankya.rnk.TextViewPlus
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:visibility="gone">

            <com.susankya.rnk.TextViewPlus
                android:id="@+id/title_shift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Settings title"
                android:textColor="#120"
                android:textSize="20dp" />

            <ToggleButton
                android:id="@+id/toggleButton_shift"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/custom_selector"
                android:text="New ToggleButton"
                android:textColor="#fff" />

            <com.susankya.rnk.TextViewPlus
                android:id="@+id/description_shift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/title_shift"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"

                android:layout_toLeftOf="@id/toggleButton_shift"
                android:text="description"
                android:textSize="13dp" />
        </RelativeLayout>

        <com.susankya.rnk.TextViewPlus
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="gone">

            <com.susankya.rnk.TextViewPlus
                android:id="@+id/title_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Settings title"
                android:textColor="#120"
                android:textSize="20dp" />

            <ToggleButton
                android:id="@+id/toggleButton_profile"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/custom_selector"
                android:text="New ToggleButton"
                android:textColor="#fff" />

            <com.susankya.rnk.TextViewPlus
                android:id="@+id/description_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/title_profile"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"

                android:layout_toLeftOf="@id/toggleButton_profile"
                android:text="description"
                android:textSize="13dp" />
        </RelativeLayout>

        <com.susankya.rnk.TextViewPlus
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <com.susankya.rnk.TextViewPlus
                android:id="@+id/title_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Settings title"
                android:textColor="#120"
                android:textSize="20dp" />

            <Switch
                android:id="@+id/switch1_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/custom_selector"
                android:switchTextAppearance="@style/SwitchTextAppearance" />

            <com.susankya.rnk.TextViewPlus
                android:id="@+id/description_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/title_notification"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"

                android:layout_toLeftOf="@id/switch1_notification"
                android:text="description"
                android:textSize="13dp" />
        </RelativeLayout>

        <com.susankya.rnk.TextViewPlus
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <com.susankya.rnk.TextViewPlus
                android:id="@+id/image_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Load images"
                android:textColor="#000"
                android:textSize="20dp" />

            <Switch
                android:id="@+id/image_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentRight="true"
                android:background="@drawable/custom_selector"
                android:switchTextAppearance="@style/SwitchTextAppearance" />

            <com.susankya.rnk.TextViewPlus
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/image_text"
                android:layout_marginLeft="25dp"

                android:layout_marginRight="25dp"
                android:layout_toLeftOf="@id/image_switch"
                android:text="Choose whether to load images on  छलफल or not"
                android:textSize="13dp" />
        </RelativeLayout>

        <com.susankya.rnk.TextViewPlus
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/routineRL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/settings_drawable">

            <com.susankya.rnk.TextViewPlus
                android:id="@+id/title_routine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Get Routine"
                android:textColor="#000"
                android:textSize="20dp" />

            <com.susankya.rnk.TextViewPlus
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/title_routine"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:text="Get routine of your section through internet"
                android:textSize="13dp" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>