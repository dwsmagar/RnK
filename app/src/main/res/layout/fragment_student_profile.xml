<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="8dp"
    tools:context="com.susankya.schoolvalley.StudentProfileFragment">

    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <com.susankya.schoolvalley.TextViewPlus
            android:id="@+id/textForFont"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="22dp"
            android:background="@drawable/notice_list_circle"
            android:gravity="center"
            android:text="C"
            android:textColor="@color/colorPrimary"
            android:textSize="50dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="18dp"
            android:orientation="vertical">

            <com.susankya.schoolvalley.TextViewPlus
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textForFont"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingTop="5dp"
                android:text="Name OF Student"
                android:textAllCaps="true"
                android:textColor="#000"
                android:textSize="18dp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/very_light_grey"
                android:visibility="gone"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/student_detail_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/student_profile_bg"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
