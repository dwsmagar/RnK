<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:minHeight="50dp"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="12dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <com.susankya.schoolvalley.TextViewPlus
        android:id="@+id/ph_tv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:background="@drawable/notice_list_circle"
        android:gravity="center"
        android:text="C"
        android:textColor="@color/light_grey"
        android:textSize="26dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/ph_tv">

        <TextView
            android:id="@+id/category_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full name"
            android:textColor="@color/primary_text"
            style="@style/Base.TextAppearance.AppCompat.Small" />

        <com.susankya.schoolvalley.TextViewPlus
            android:id="@id/date_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="Dec 22"
            android:textColor="@color/grey"
            android:textSize="@dimen/small_txt_size" />

        <com.susankya.schoolvalley.TextViewPlus
            android:id="@+id/title_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/category_content"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/date_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Christmas holiday"
            android:textColor="@color/primary_text"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/toggle_menu"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:layout_below="@id/date_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="8dp"
            android:gravity="right">

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/dot_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|right"
            android:text="{entypo-dots-three-vertical}"
            android:textColor="@color/colorGrey"
            android:textSize="16sp"
            android:visibility="visible" />
        </LinearLayout>

        <com.susankya.schoolvalley.TextViewPlus
            android:id="@id/description_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/title_content"
            android:layout_toLeftOf="@+id/attachment_icon"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="The campus will remain closed on the occasion of christmas ok boy"
            android:textColor="@color/secondary_text"
            android:textSize="11sp" />

        <ImageView
            android:id="@id/attachment_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_file" />
    </RelativeLayout>
</RelativeLayout>

