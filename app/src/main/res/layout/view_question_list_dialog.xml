<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.susankya.schoolvalley.askQuestionCodeDialogFragment"
    android:padding="10dp"
    android:background="@color/grey_dialog">

    <com.susankya.schoolvalley.TextViewPlus
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:text="Please enter questions set code number or topic"

        android:padding="15dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Example: mechanics11"
        android:id="@+id/ques_code"
        android:background="@drawable/box"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:padding="15dp">
        <Button android:textAllCaps="false"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="OK"
            android:layout_weight="1"
            android:id="@+id/ok_button"
            android:textColor="#fff"
            android:background="@drawable/custom_selector"
            android:layout_marginRight="10dp"
            />
        <Button android:textAllCaps="false"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Cancel"
            android:textColor="#fff"
            android:layout_weight="1"
            android:id="@+id/cancel_button"
            android:layout_marginLeft="10dp"
            android:background="@drawable/custom_selector"/>

    </LinearLayout>
</LinearLayout>
